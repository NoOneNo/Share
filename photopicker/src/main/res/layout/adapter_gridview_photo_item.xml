<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include 
        android:id="@+id/adapter_gridview_header"
        layout="@layout/view_header_gridview_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<FrameLayout
		android:id="@+id/adapter_gridview_frame_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<RelativeLayout
			android:id="@+id/adapter_gridview_photo_item_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<ImageView
				android:id="@+id/adapter_gridview_photo_item_img"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:adjustViewBounds="true"
				android:scaleType="centerCrop"
				android:contentDescription="@null"/>

			<View
				android:id="@+id/adapter_gridview_photo_item_shadow_select"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/select_photo_shadow_layout"
				android:visibility="gone"/>
			<View
				android:id="@+id/adapter_gridview_photo_item_shadow_click"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/select_photo_shadow_layout"
				android:visibility="gone"/>
			<View
				android:id="@+id/adapter_gridview_photo_item_btn_unselect"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:layout_marginTop="4dp"
				android:layout_marginRight="4dp"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:contentDescription="@null"
				android:background="@drawable/compose_photo_preview_default"
				android:visibility="visible"/>

			<View
				android:id="@+id/adapter_gridview_photo_item_btn_select"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:layout_marginTop="4dp"
				android:layout_marginRight="4dp"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:contentDescription="@null"
				android:background="@drawable/compose_photo_preview_right"
				android:visibility="gone"/>

			<View
				android:id="@+id/adapter_gridview_photo_item_select_scope"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:layout_width="50dp"
				android:layout_height="50dp"/>

			<RelativeLayout
				android:id="@+id/adapter_gridview_video_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/select_photo_layout"
				android:layout_alignParentBottom="true"
				android:paddingLeft="10dp"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:paddingRight="10dp">

				<View
					android:layout_width="25dp"
					android:layout_height="20dp"
					android:background="@drawable/camera_video_button"/>

				<TextView
					android:id="@+id/adapter_gridview_video_duration"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="12sp"
					android:layout_alignParentRight="true"/>
			</RelativeLayout>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/adapter_gridview_take_photo_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#eeeeee"
			android:visibility="gone">

			<ImageView
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_centerInParent="true"
				android:src="@drawable/btn_take_photo"
				android:scaleType="centerCrop"
				android:contentDescription="@null"/>
		</RelativeLayout>
	</FrameLayout>
    <ViewStub 
   		android:id="@+id/adapter_gridview_footer"
       	android:layout="@layout/view_footer_gridview_photo"
      	android:layout_width="match_parent"
      	android:layout_height="wrap_content"/>
</LinearLayout>