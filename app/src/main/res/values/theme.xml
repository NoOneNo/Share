<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 用于Toolbar的颜色设置 -->
        <item name="colorPrimary">?attr/theme_color</item>

        <!-- 用于状态栏的颜色设置 -->
        <item name="colorPrimaryDark">?attr/theme_color</item>

        <!-- 用于个人信息侧滑页的头部变换色 -->
        <!--<item name="android:colorPressedHighlight">?attr/theme_dark_color</item>-->

        <item name="colorAccent">?attr/theme_accent_color</item>

        <!-- 解决选择文字时actionMode不和actionBar重叠的问题 -->
        <item name="windowActionModeOverlay">true</item>

        <!-- 设置菜单栏的样式 -->
        <!--<item name="android:popupMenuStyle">@style/popupMenuStyle</item>-->
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>

        <!--<item name="actionOverflowMenuStyle">@style/AppBaseActionOverflowMenuStyle</item>-->

        <!--<item name="android:homeAsUpIndicator">@mipmap/btn_back</item>-->

        <!-- 用于设置导航栏的颜色 -->
        <item name="android:navigationBarColor">?attr/theme_color</item>

        <!-- 状态栏颜色 用colorPrimaryDark设置？ -->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->

        <!-- 默认背景是设置在RootView上，但是大部分时候界面的布局又会设置不同背景颜色，为了防止重复绘制，不要设置colorBackground -->
        <item name="android:colorBackground">@null</item>
        <!--<item name="android:colorBackground">@color/background_default</item>-->


        <!-- 如果需要调节状态栏和导航栏的颜色，设为true -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- 半透明 -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->

        <!-- 屏幕方向默认为竖直方向 -->
        <item name="android:screenOrientation">portrait</item>

        <!-- 窗口透明 -->
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementReturnTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowSharedElementReenterTransition">@android:transition/move</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@color/background_default</item>
    </style>

    <style name="popupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/background_default</item>
    </style>

    <!--<style name="AppBaseActionOverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">-->
        <!--<item name="android:src">@drawable/ic_more_vert_white_48dp</item>-->
        <!--<item name="overlapAnchor">false</item>-->
        <!--<item name="android:dropDownVerticalOffset">-3dip</item>-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--<item name="actionMenuTextColor">@android:color/white</item>-->
    <!--</style>-->

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="AppTheme.Main">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="GuidanceTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--<item name="windowNoTitle">true</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!--<item name="android:colorBackground">@color/background_launch</item>-->
        <item name="android:background">@drawable/guidance</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/background_launch</item>
        <item name="android:statusBarColor">@color/background_launch</item>
        <!--<item name="android:windowTranslucentStatus">false</item>-->
    </style>

    <style name="ShareAppTheme" parent="AppTheme">
        <item name="theme_color">@color/theme_green_primary</item>
        <item name="theme_dark_color">@color/theme_green_primary_dark</item>
        <item name="theme_accent_color">@color/theme_green_accent</item>

        <item name="theme_assist_color">@color/white</item>
    </style>

    <style name="ShareAppTheme.DayNight">
        <item name="theme_color">@color/theme_night_primary</item>
        <item name="theme_dark_color">@color/theme_night_primary_dark</item>
        <item name="theme_accent_color">@color/theme_night_accent</item>
    </style>

    <style name="ShareAppTheme.Blue">
        <item name="theme_color">@color/theme_blue_primary</item>
        <item name="theme_dark_color">@color/theme_blue_primary_dark</item>
        <item name="theme_accent_color">@color/theme_blue_accent</item>
    </style>

    <style name="ShareAppTheme.Green">
        <item name="theme_color">@color/theme_green_primary</item>
        <item name="theme_dark_color">@color/theme_green_primary_dark</item>
        <item name="theme_accent_color">@color/theme_green_accent</item>
    </style>

    <style name="ShareAppTheme.Pink">
        <item name="theme_color">@color/theme_pink_primary</item>
        <item name="theme_dark_color">@color/theme_pink_primary_dark</item>
        <item name="theme_accent_color">@color/theme_pink_accent</item>
    </style>
