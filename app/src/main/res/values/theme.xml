<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:homeAsUpIndicator">@mipmap/btn_back</item>-->
        <item name="android:navigationBarColor">?attr/theme_color</item>
        <!-- 用于Toolbar的颜色设置 -->
        <item name="colorPrimary">?attr/theme_color</item>
        <!-- 用于状态栏的颜色设置 -->
        <item name="colorPrimaryDark">?attr/theme_color</item>
        <!-- 用于侧滑页的头部变换色 -->
        <!--<item name="android:colorPressedHighlight">?attr/theme_dark_color</item>-->

        <item name="colorAccent">?attr/theme_accent_color</item>

        <item name="android:colorBackground">@color/background_default</item>

        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->

        <!-- 半透明 -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->

        <item name="android:screenOrientation">portrait</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementReturnTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowSharedElementReenterTransition">@android:transition/move</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="ShareAppTheme" parent="AppTheme">
        <item name="theme_color">@color/theme_green_primary</item>
        <item name="theme_dark_color">@color/theme_green_primary_dark</item>
        <item name="theme_accent_color">@color/theme_green_accent</item>

        <item name="theme_assist_color">@color/white</item>
    </style>

    <style name="ShareAppTheme.Blue">
        <item name="theme_color">@color/theme_blue_primary</item>
        <item name="theme_dark_color">@color/theme_blue_primary_dark</item>
        <item name="theme_accent_color">@color/theme_blue_accent</item>
    </style>

    <style name="ShareAppTheme.Green">
        <item name="theme_color">@color/theme_green_primary</item>
        <item name="theme_dark_color">@color/theme_green_primary_dark</item>
        <item name="theme_accent_color">@color/theme_green_accent</item>
    </style>

    <style name="ShareAppTheme.Pink">
        <item name="theme_color">@color/theme_pink_primary</item>
        <item name="theme_dark_color">@color/theme_pink_primary_dark</item>
        <item name="theme_accent_color">@color/theme_pink_accent</item>
    </style>
    <!--<style name="ShareAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >-->
    <!--<item name="colorPrimary">?attr/colorPrimary</item>-->
    <!--<item name="colorControlHighlight">?attr/colorControlHighlight</item>-->
    <!--</style>-->
    <!--<style name="ShareAppTheme.Green.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>