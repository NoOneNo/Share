        <!--<item name="cardMaxElevation">@dimen/fab_sheet_elevation</item>-->
        <!--<item name="contentPadding">-3dp</item>-->

        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/spacing_nano</item>
        <item name="cardMaxElevation">@dimen/spacing_nano</item>
        <item name="contentPadding">-3dp</item>
    </style>

</resources>