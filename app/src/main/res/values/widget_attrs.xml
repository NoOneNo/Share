<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="toolbar" type="id" />

    <!--<attr name="loading_drawable" format="reference"/>-->

    <!-- CommonTabLayout -->
    <declare-styleable name="CommonTabLayout">
        <attr name="autoTintThemeColor" format="boolean" />
    </declare-styleable>

    <!-- SideBar -->
    <declare-styleable name="SideBar">
        <attr name="backgroundNormalColor" format="reference" />
        <attr name="backgroundPressedColor" format="reference" />
        <attr name="letterNormalColor" format="reference" />
        <attr name="letterPressedColor" format="reference" />
    </declare-styleable>

    <!-- StretchLoadingView -->
    <declare-styleable name="StretchLoadingView">
        <attr name="stretch_target" format="reference" />
        <attr name="stretch_targetCount" format="integer" />
        <attr name="stretch_gravity" format="string" />
    </declare-styleable>

    <!-- ShimmerFrameLayout -->
    <declare-styleable name="ShimmerFrameLayout">
        <attr name="auto_start" format="boolean" />
        <attr name="base_alpha" format="float" />
        <attr name="duration" format="integer" />
        <attr name="repeat_count" format="integer" />
        <attr name="repeat_delay" format="integer" />
        <attr name="repeat_mode" format="enum">
            <enum name="restart" value="1" />
            <enum name="reverse" value="2" />
        </attr>
        <attr name="angle" format="enum">
            <enum name="cw_0" value="0" />
            <enum name="cw_90" value="90" />
            <enum name="cw_180" value="180" />
            <enum name="cw_270" value="270" />
        </attr>
        <attr name="dropoff" format="float" />
        <attr name="fixed_width" format="dimension" />
        <attr name="fixed_height" format="dimension" />
        <attr name="intensity" format="float" />
        <attr name="relative_width" format="float" />
        <attr name="relative_height" format="float" />
        <attr name="shape" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
        </attr>
        <attr name="tilt" format="float" />
    </declare-styleable>

    <!-- ExpandIconView -->
    <declare-styleable name="ExpandIconView">
        <attr name="eiv_roundedCorners" format="boolean" />
        <attr name="eiv_switchColor" format="boolean" />
        <attr name="eiv_color" format="color" />
        <attr name="eiv_colorMore" format="color" />
        <attr name="eiv_colorLess" format="color" />
        <attr name="eiv_animationDuration" format="integer" />
        <attr name="eiv_padding" format="dimension" />
    </declare-styleable>


</resources>