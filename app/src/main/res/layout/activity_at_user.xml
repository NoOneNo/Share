<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/ic_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_search_2"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_select_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="67dp"/>
            <!--<com.dy.rcp.view.horizontallistview.HListView-->
                <!--android:id="@+id/address_group_portrait_listview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginBottom="5dp"-->
                <!--android:layout_marginEnd="67dp"-->
                <!--android:visibility="gone"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_600"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:hint="搜索"
            android:singleLine="true"
            android:background="@null"
            android:layout_marginStart="32dp"
            android:paddingEnd="5dp"
            android:paddingStart="0dp"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>


    <!--<com.hengye.swiperefresh.PullToRefreshLayout-->
        <!--android:id="@+id/pull_to_refresh"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_search_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <!--</com.hengye.swiperefresh.PullToRefreshLayout>-->
</LinearLayout>