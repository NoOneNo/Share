<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    android:orientation="vertical"
    tools:context=".module.search.SearchActivity">

    <com.hengye.share.ui.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_margin_10dp"
        android:text="@string/label_search_user" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/content_margin_10dp"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/content_margin_10dp"
        android:paddingTop="@dimen/content_margin_10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_margin_10dp"
        android:text="@string/label_search_topic" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_topic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>