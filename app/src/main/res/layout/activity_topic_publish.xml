<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/et_topic_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/pick_photo"
            android:hint="@string/label_topic_publish_hint"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:scrollbarStyle="outsideOverlay"
            android:background="@null"
            android:padding="@dimen/content_margin_10dp"
            android:gravity="start|top"/>

        <com.hengye.photopicker.view.PickPhotoView
            android:id="@+id/pick_photo"
            android:layout_above="@+id/ll_topic_publish_tools"
            android:layout_marginStart="@dimen/content_margin_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="4"
            app:maxSize="9"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/ll_topic_publish_tools"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="?attr/theme_color">

            <ImageButton
                style="?android:buttonBarButtonStyle"
                android:id="@+id/btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/compose_camerabutton_background"
                android:visibility="gone"/>

            <ImageButton
                style="?android:buttonBarButtonStyle"
                android:id="@+id/btn_mention"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/compose_mentionbutton_background"/>

            <ImageButton
                style="?android:buttonBarButtonStyle"
                android:id="@+id/btn_emoticon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/compose_emoticonbutton_background"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageButton
                style="?android:buttonBarButtonStyle"
                android:id="@+id/btn_publish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@android:drawable/ic_menu_send"/>

        </LinearLayout>

    </RelativeLayout>

    <com.hengye.share.ui.emoticon.EmoticonPicker
        android:id="@+id/emoticon_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>