<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/content_margin_10dp"
    android:paddingTop="@dimen/content_margin_10dp"
    android:paddingEnd="@dimen/content_margin_10dp">

    <!--android:layout_height="@dimen/dialog_list_item_height"-->
    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/icon_size_small"
        android:layout_height="@dimen/icon_size_small"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_delete_white_48dp"/>

    <TextView
        android:id="@+id/tv_item"
        android:layout_toEndOf="@id/iv_item"
        android:layout_alignBottom="@id/iv_item"
        android:layout_marginStart="@dimen/content_margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/white"
        android:lines="1"
        tools:text="test"/>

    <View
        style="@style/horizontal_line"
        android:id="@+id/divider_line"
        android:layout_below="@id/iv_item"
        android:layout_marginTop="@dimen/content_margin_10dp"/>
</RelativeLayout>