<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_status_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:showIn="@layout/item_status_draft_basic">

    <include layout="@layout/item_title_user" />

    <Button
        android:id="@+id/btn_topic_send_again"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="@string/label_send_again"
        android:textSize="12sp"
        android:visibility="gone"
        style="@style/Widget.Material.Button"/>
</RelativeLayout>