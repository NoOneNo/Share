<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#ffdfdf"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:id="@+id/rl_no_network">

    <View
        android:id="@+id/ic_warning"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_warning"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ic_warning"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="@string/label_no_network"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c03a3a"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>