<FrameLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/select_photo_gallery_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.hengye.share.ui.widget.common.CommonViewPager
	    android:id="@+id/view_pager"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center"
	    android:flipInterval="30"
	    android:persistentDrawingCache="animation"
	    android:overScrollMode="never"/>
	<RelativeLayout 
	    android:id="@+id/select_photo_gallery_pages_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_gravity="bottom"
	    android:layout_marginBottom="25dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/select_photo_gallery_pages"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textColor="@android:color/white"/>
	</RelativeLayout>

	<Button
		android:id="@+id/btn_image_save"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/spacing_micro"
		android:layout_gravity="end|bottom"
		android:layout_marginEnd="@dimen/activity_horizontal_margin"
		android:layout_marginBottom="@dimen/activity_vertical_margin"
		android:background="@drawable/border_transparent"
		android:text="@string/topic_gallery_image_save"/>

</FrameLayout>
