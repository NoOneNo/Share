<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.android.volley.view.NetworkImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/user_avatar"
        android:layout_height="@dimen/user_avatar"
        android:src="@android:drawable/sym_def_app_icon"/>

    <ImageButton
        android:id="@+id/iv_more_account"
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_marginStart="@dimen/content_margin_10dp"
        android:layout_width="@dimen/user_avatar"
        android:layout_height="@dimen/user_avatar"
        android:src="@drawable/compose_more_account_add"
        android:background="@color/grey_300"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_below="@id/iv_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tv_sign"
        android:layout_below="@id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"/>

</RelativeLayout>
