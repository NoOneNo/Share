<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_personal_homepage_height"
    android:fitsSystemWindows="true"
    tools:showIn="@layout/activity_personal_homepage">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="48dp"
        app:expandedTitleMarginStart="48dp"
        app:expandedTitleTextAppearance="@style/PersonalHomepageExpandedTitleAppearance"
        app:collapsedTitleTextAppearance="@style/PersonalHomepageTitleAppearance"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <com.android.volley.view.NetworkImageViewPlus
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:background="@color/image_default_bg"
            app:layout_collapseMode="parallax" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.android.volley.view.NetworkImageViewPlus
                android:id="@+id/iv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/ll_user_info_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_below="@id/iv_avatar"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_division"
                    android:textSize="14sp"
                    android:paddingStart="@dimen/content_margin_10dp"
                    android:paddingEnd="@dimen/content_margin_10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_margin_50dp"
                android:layout_marginEnd="@dimen/content_margin_50dp"
                android:maxLines="2"
                android:layout_below="@id/ll_user_info_summary"
                android:textSize="14sp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <com.hengye.share.ui.view.CommonToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin" />

    </android.support.design.widget.CollapsingToolbarLayout>

</android.support.design.widget.AppBarLayout>