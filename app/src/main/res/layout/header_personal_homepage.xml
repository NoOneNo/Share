<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_personal_homepage_height"
    android:fitsSystemWindows="true"
    tools:showIn="@layout/activity_personal_homepage">

    <!--<android.support.design.widget.CollapsingToolbarLayout-->
    <com.hengye.share.ui.support.widget.CustomToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:collapsedTitleTextAppearance="@style/PersonalHomepageTitleAppearance"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="48dp"
        app:expandedTitleMarginStart="48dp"
        app:expandedTitleTextAppearance="@style/PersonalHomepageExpandedTitleAppearance"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:toolbarId="@+id/toolbar">

        <com.android.volley.view.NetworkImageViewPlus
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/image_default_bg"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <com.android.volley.view.NetworkImageViewPlus
                android:id="@+id/iv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_header_grey"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="58dp">

                <LinearLayout
                    android:id="@+id/ll_user_info_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_division"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/content_margin_10dp"
                        android:paddingStart="@dimen/content_margin_10dp"
                        android:text="@string/label_division"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/content_margin_50dp"
                    android:layout_marginStart="@dimen/content_margin_50dp"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <com.hengye.share.ui.view.CommonToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin" />

    </com.hengye.share.ui.support.widget.CustomToolbarLayout>
    <!--</android.support.design.widget.CollapsingToolbarLayout>-->

</android.support.design.widget.AppBarLayout>