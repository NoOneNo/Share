<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hengye.share">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <!-- Tencent Bugly -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- -->

    <application
        android:name=".ui.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ShareAppTheme">

        <service android:name="com.hengye.share.service.ShareService" />
        <service android:name="com.hengye.share.service.TopicPublishService" />

        <activity
            android:name=".ui.activity.TopicActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hengye.share.ui.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".ui.activity.TopicActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.TopicActivity" />
        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.TopicGalleryActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.activity.TopicActivity"
            android:theme="@style/FullScreenTheme"></activity>

        <activity
            android:name=".ui.activity.FragmentActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.setting.SettingActivity"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.PersonalHomepageActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="${applicationId}.mention" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.TopicPublishActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.hengye.share.ui.activity.TopicDraftActivity"
            android:label="@string/title_activity_topic_draft"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.hengye.share.ui.activity.TopicDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.TopicMentionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.TopicCommentActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.hengye.share.ui.activity.AtUserActivity"
            android:label="@string/title_activity_at_user"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.hengye.share.ui.activity.SearchActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.hengye.share.ui.activity.SetTokenActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.hengye.share.ui.activity.GroupManageActivity"
            android:label="@string/title_activity_group_manage"
            android:screenOrientation="portrait" />

        <activity android:name="com.hengye.share.ui.activity.TestActivity" />
    </application>

</manifest>
