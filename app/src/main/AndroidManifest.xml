<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hengye.share">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!--<uses-permission android:name="android.permission.GET_ACCOUNTS" />-->
    <!--<uses-permission android:name="android.permission.READ_PROFILE" />-->
    <!--<uses-permission android:name="android.permission.READ_CONTACTS" />-->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />

    <!-- Tencent Bugly -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- -->

    <application
        android:name="com.hengye.share.ui.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ShareAppTheme">

        <service android:name="com.hengye.share.service.ShareService" />
        <service android:name="com.hengye.share.service.TopicPublishService" />


        <activity
            android:name="com.hengye.share.ui.activity.GuidanceActivity"
            android:label="@string/app_name">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <!-- use an alias in case we want to change the launch activity later without breaking
             homescreen shortcuts.  Note must be defined after the targetActivity -->
        <activity-alias
            android:name="com.hengye.share.Launcher"
            android:label="@string/app_name"
            android:targetActivity="com.hengye.share.ui.activity.GuidanceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="com.hengye.share.ui.activity.TopicActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Main"/>

        <activity
            android:name="com.hengye.share.ui.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.hengye.share.ui.activity.TopicActivity"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hengye.share.ui.activity.TopicActivity" />
        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.ThirdPartyLoginActivity"
            android:theme="@style/FullScreenTheme.HasStatusBar"/>

        <activity
            android:name="com.hengye.share.ui.activity.WeiboWebLoginActivity"/>


        <activity
            android:name="com.hengye.share.ui.activity.GalleryActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:theme="@style/FullScreenTheme"/>

        <activity
            android:name=".ui.activity.FragmentActivity"/>

        <activity
            android:name="com.hengye.share.ui.activity.setting.SettingActivity"
            android:label="@string/title_activity_setting">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.PersonalHomepageActivity">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="${applicationId}.mention" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.TopicThemeActivity"
            android:label="@string/title_activity_topic_theme">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="${applicationId}.topic" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.web.WebViewActivity"
            android:label="@string/title_activity_web_view">

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="${applicationId}.http" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.hengye.share.ui.activity.TopicPublishActivity"/>

        <activity
            android:name="com.hengye.share.ui.activity.TopicDraftActivity"
            android:label="@string/title_activity_topic_draft"/>

        <activity
            android:name=".ui.activity.TopicDetailActivity"/>

        <activity
            android:name="com.hengye.share.ui.activity.TopicMentionActivity"/>

        <activity
            android:name="com.hengye.share.ui.activity.TopicCommentActivity"/>

        <activity
            android:name=".ui.activity.AtUserActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_at_user"/>

        <activity
            android:name="com.hengye.share.ui.activity.SearchActivity"/>

        <activity
            android:name="com.hengye.share.ui.activity.SetTokenActivity"/>

        <activity
            android:name="com.hengye.share.ui.activity.GroupManageActivity"
            android:label="@string/title_activity_group_manage"/>

        <activity
            android:name="com.hengye.share.ui.activity.AccountManageActivity"
            android:label="@string/title_activity_account_manage"/>

        <activity android:name="com.hengye.share.ui.activity.TestActivity" />
    </application>

</manifest>
